<Window x:Class="wslcontrol_gui.OnlineInstall"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wslcontrol_gui"
        mc:Ignorable="d"
        Title="Online distribution installation" WindowStartupLocation="CenterOwner" Width="350" Height="390" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <ListBox Grid.Row="0" Height="300" Width="auto" Margin="5,5,5,5" x:Name="OnlineDistroList" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Content="Install" x:Name="InstallButton" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="150" Click="InstallButton_Click"/>
            <Button Grid.Column="0" Content="Cancel" x:Name="CancelButton" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="150" Click="CancelButton_Click"/>
        </Grid>
    </Grid>
</Window>
