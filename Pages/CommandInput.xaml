<Window x:Class="wslcontrol_gui.CommandInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        xmlns:local="clr-namespace:wslcontrol_gui"
        mc:Ignorable="d"
        Title="CommandInput" Height="110" Width="619" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="NoWrap"  VerticalAlignment="Top" Width="550" Height="50" FontFamily="Consolas" FontSize="18" Name="CommandBox" HorizontalScrollBarVisibility="Auto"/>
        <Button Name="RunButton"  Content="Run" HorizontalAlignment="Left" Margin="565,10,0,0" VerticalAlignment="Top" Height="50" Width="35" Click="RunButton_Click"/>
    </Grid>
</Window>
