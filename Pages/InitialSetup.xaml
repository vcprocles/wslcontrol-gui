<Window x:Class="wslcontrol_gui.Pages.InitialSetup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wslcontrol_gui.Pages"
        mc:Ignorable="d"
        Style="{DynamicResource CustomWindowStyle}"
        Title="Initial setup" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Label Content="Install source:" Grid.Row="0" Grid.Column="0"/>
            <ComboBox Width="120" Height="30" Text="Select option..." Grid.Row="0" Grid.Column="1">
                <ComboBoxItem Content="Microsoft Store"/>
                <ComboBoxItem Content="Inbuilt feature"/>
                <ComboBoxItem Content="Website"/>
            </ComboBox>
            <CheckBox Content="Enable WSL1 support" Grid.Row="1" Grid.Column="1"/>
            <CheckBox Content="Select a specific distro" Grid.Row="1" Grid.Column="0"/>
            <Button Content="Install" Grid.Column="0" Grid.Row="2"/>
            <Button Content="Exit" Grid.Column="1" Grid.Row="2"/>


        </Grid>
        <ListView x:Name="OnlineDistroList" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
